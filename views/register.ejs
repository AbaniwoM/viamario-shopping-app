<div class="row">
  <div class="overlay">
  <div class="col-md-6 m-auto">
    <div class="content-body card card-body">
      <h1 class="head text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <% if(typeof errors != 'undefined') { %>
        <% errors.forEach(function(error) { %>
          <div class="mes alert alert-warning alert-dismissible fade show" role="alert">
            <div class="err">
            <%= error.msg %>
            </div>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% }); %>
      <% } %>
      
      <% if(success_msg != '') { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="height: 5vh;">
          <div style="margin-top: -8px; font-size: 0.9rem;">
          <%= success_msg %>
          </div>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="margin-top: -12px;">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% } %>

      <% if(error_msg != '') { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert" style="height: 5vh;">
          <div style="margin-top: -8px; font-size: 0.9rem;">
          <%= error_msg %>
          </div>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="margin-top: -12px;">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% } %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button class="register-btn btn btn-primary btn-block">
          <div class="reg">Register</div>
        </button>
      </form>
      <div class="have">
        <p class="log lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
        <div class="return">
        <h3 class="backward"><i class="fas fa-backward"></i></h3>
        <p class="back lead2 mt-4"><a href="/users/welcome">Back</a></p>
      </div>
    </div>
  </div>
  </div>
</div>


        