<div class="row2">
  <div class="overlay2">
      <div class="house">
        <h1 class="log-head text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <% if(typeof errors != 'undefined') { %>
          <% errors.forEach(function(error) { %>
            <div class="mes2 alert alert-warning alert-dismissible fade show" role="alert">
              <div class="not">
              <%= error.msg %>
              </div>
              <button type="button" class="close2" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% }); %>
        <% } %>
        
        <% if(success_msg != '') { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <div style="margin-top: -8px; font-size: 0.9rem;">
            <%= success_msg %>
            </div>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="margin-top: -12px;">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% } %>
  
        <% if(error_msg != '') { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert" style="height: 5vh;">
            <div style="margin-top: -8px; font-size: 0.9rem;">
            <%= error_msg %>
            </div>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="margin-top: -12px;">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% } %>

        <% if(error != '') { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert" style="height: 5vh;">
            <div style="margin-top: -8px; font-size: 0.9rem;">
            <%= error %>
            </div>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="margin-top: -12px;">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% } %>
        <form class="form2" action="/users/login" method="POST">
          <div class="form-group2">
            <label class="label2" for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group2">
            <label class="label2" for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button class="logibt mt-5 pt-1 btn btn-primary btn-block">Login</button>
        </form>
        <div class="final">
        <p class="lead mt-4 fin-text">
          No Account? <a href="/users/register" class="fin-reg">Register</a>
        </p>
        <div class="prev">
        <h3 class="prev-btn"><i class="fas fa-backward"></i></h3>
        <p class="lead mt-4 back-txt"><a class="bckln" href="/users/welcome">Back</a></p>
        </div>
        </div>
      </div>
    </div>
</div>
